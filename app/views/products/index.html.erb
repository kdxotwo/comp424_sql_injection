<div class="container">
    <div>
        <div class="jumbotron">
            <h1 class="display-4">Product Search</h1>
            <hr>
        </div>
        <br />
        <br />
        <%= form_with url: "/products", method: :get do |f| %>
            <div class="form-group row justify-content-center">
                <div class="col-md-5">
                    <%= f.text_field :search, class: "form-control", placeholder: "ex: dress" %>
                </div>
                
                <div class="col-md-1">
                    <%= f.submit "Search", class: "btn btn-primary" %>
                </div>
            </div>
            <br />
        <% end %>
    </div>

    <div>
        <h2>Products</h2>
        <% if @products.empty? %>
            <p><%= "0 Products found!" %></p>
        <% else %>
        <table class="table table-striped table-bordered">
            <thead>
            <th>Product Names</th>
            <th>Price</th>
            <th>Quantity</th>
            </thead>
            <tbody>
            <% @products.each do |product| %>
                <tr>
                    <td><%= product[:name] %></td>
                    <td>$<%= product[:price] %></td>
                    <td><%= product[:quantity] %></td>
                </tr>
            <% end %>
            </tbody>
        </table>
        <% end %>
    </div>
</div>
